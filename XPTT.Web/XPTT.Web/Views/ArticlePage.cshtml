@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.ArticlePage>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "MasterPage.cshtml";
}
@{
    var featureImage = CurrentPage.FeatureImage != null ? Umbraco.Media(CurrentPage.FeatureImage).umbracoFile : "";
}
@{   var selection = CurrentPage.AncestorOrSelf(1).Descendants("articlePage").Where("ShowOnHomePage == true").Where("Visible"); }
<!-- Main -->
<div class="wrapper">
    <div class="container" id="main">
        <div class="row 150%">
            <div class="4u 12u(narrower)">

                <!-- Sidebar -->
                <section id="sidebar">     
                    @foreach (var item in selection)
                    {
                        var featureImageArticle = item.FeatureImage != null ? Umbraco.Media(item.FeatureImage).umbracoFile : "";
                        <section>
                            <header>
                                <h3><a href="@item.Url">@item.PageName</a></h3>
                            </header>
                            <a href="@item.Url" class="image featured"><img src="@featureImageArticle" alt="" /></a>
                            
                            <p>
                              @item.PageDescription
                            </p>                        
                        </section>
                    }

                    
                </section>

            </div>
            <div class="8u 12u(narrower) important(narrower)">

                <!-- Content -->
                <article id="content">
                    <header>
                        <h2>@CurrentPage.PageName</h2>
                        <p>
                            @CurrentPage.PageDescription
                        </p>
                    </header>
                    <a href="#" class="image featured"><img src="@featureImage" alt="" /></a>
                    @CurrentPage.MainContent
                </article>

            </div>
        </div>
        
    </div>
    
</div>

@inherits Umbraco.Web.Mvc.UmbracoViewPage<Merchello.FastTrack.Models.FastTrackCheckoutSummaryModel>
@using System.Web.Mvc.Html
@using Merchello.Core
@using Merchello.Web.Models.Ui
@using Umbraco.Core.Models
@using Umbraco.Web

<div class="container-fluid">
    <h3 class="blockHeader">Hóa đơn mua hàng</h3>
    <h4>Invoice @Model.InvoiceNumber <span class="text-right">@Model.InvoiceDate.ToShortDateString()</span></h4>
    <div class="row">
        <div class="col-md-6 basket-summary">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="blockHeader"> Địa chỉ thanh toán</h4>
                </div>
                <div class="panel-body">
                    @Html.Partial("_Address", Model.BillingAddress)
                </div>
            </div>

        </div>
        @if (Model.HasShippableItems())
        {
            <div class="col-md-6 basket-summary">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="blockHeader">Địa chỉ giao hàng</h4>
                    </div>
                    <div class="panel-body">
                        @Html.Partial("_Address", Model.ShippingAddress)
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading"><h4 class="blockHeader">Mặt hàng</h4>
                </div>
                <div class="panel-body">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th colspan="2">Tên</th>
                            <th>Đơn giá</th>
                            <th>Số lượng</th>
                            <th>Thành tiền</th>
                        </tr>
                        </thead>
                        @foreach (var item in Model.Items.Where(x => x.LineItemType == LineItemType.Product))
                        {
                            <tr>
                                <td>
                                    @if (item.LineItemType == LineItemType.Product && item.Product.HasValue("image"))
                                    {
                                        var mediaId = item.Product.GetPropertyValue<string>("image");
                                        var image = Umbraco.TypedMedia(mediaId);
                                        <img src="@image.GetCropUrl(50, 50)" alt="@item.Product.Name"/>
                                    }
                                </td>
                                <td>@item.Name</td>
                                <td class="text-right">@String.Format("{0:n0}", @item.Amount)</td>
                                <td class="text-center">@item.Quantity</td>
                                <td class="text-right">@String.Format("{0:n0}", @item.Total()) VNĐ</td>
                            </tr>
                        }
                        <tr>
                            <td colspan="4" class="text-right"><strong>Tổng:</strong></td>
                            <td class="text-right"><strong>@String.Format("{0:n0}", Model.Items.Where(x => x.LineItemType == LineItemType.Product).Sum(x => x.Total())) VNĐ</strong></td>
                        </tr>
                        @foreach (var item in Model.Items.Where(x => x.LineItemType != LineItemType.Product))
                        {
                            <tr>
                                <td>@switch (item.LineItemType)
                                {
                                    case LineItemType.Shipping:
                                        @("Shipping:")
                                        break;
                                    case LineItemType.Discount:
                                        @("Discount:")
                                        break;
                                    case LineItemType.Tax:
                                        @("Tax:")
                                        break;
                                }</td>
                                <td>@(item.LineItemType != LineItemType.Discount ? item.Name : item.Sku)</td>
                                <td colspan="3" class="text-right">
                                    @if (item.LineItemType == LineItemType.Discount)
                                    {
                                        <span>(@String.Format("{0:n0}", @item.Total()))</span>
                                    }
                                    else
                                    {
                                        @String.Format("{0:n0} VNĐ", @item.Total()) 
                                    }
                                </td>
                            </tr>
                        }
                        <tfoot>
                        <tr>
                            <td colspan="4" class="text-right"><strong>Tổng cộng:</strong></td>
                            <td class="text-right"><strong>@String.Format("{0:n0} VNĐ", @Model.Total) </strong></td>
                        </tr>
                        </tfoot>
                    </table>
                </div>
            </div>


        </div>
    </div>

</div>
